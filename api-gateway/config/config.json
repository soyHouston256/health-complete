{
  "gateway": {
    "port": "8000",
    "services": [
      {
        "name": "lead",
        "base_url": "http://ms-gestion-lead:3000",
        "prefix": "/leads",
        "timeout": 30,
        "rate_limit": {
          "enabled": true,
          "requests_per_second": 100,
          "burst_size": 200
        },
        "load_balancer": {
          "enabled": false,
          "strategy": "round_robin",
          "backends": [
            "http://ms-gestion-lead:3000"
          ]
        },
        "health_check": {
          "enabled": true,
          "endpoint": "/health",
          "interval_seconds": 30,
          "timeout_seconds": 5
        },
        "cache": {
          "enabled": true,
          "ttl_seconds": 300
        }
      },
